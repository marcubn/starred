{% extends 'base.html.twig' %}

{% block body %}
    <div class="container">
        <div class="row">
            <h3>Insert link to the website you want to parse</h3>
        </div>
        <div class="row">
            <form name="send_message" method="post" id="form_data">
                <div class="form-group">
                    <label for="url">Url</label>
                    <input type="text" class="form-control" id="url" aria-describedby="url holder" placeholder="Enter website url">
                </div>
                <button type="button" class="btn btn-primary" id="send_btn">Submit</button>
            </form>
        </div>
    </div>
{% endblock %}

